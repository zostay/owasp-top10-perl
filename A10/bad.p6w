#!/usr/bin/env smackup
use v6;

sub app(%env) {
    # Parse the parameters (naïvely)
    my $qs     = %env<QUERY_STRING>;
    my %params = $qs.split('&')».split('=').flat;

    # Get the goto parameter
    my $goto   = %params<goto>;

    # BAD BAD BAD Redirect to wherever that says to go
    302, [ Location => $goto ], []
}

