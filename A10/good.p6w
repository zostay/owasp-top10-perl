#!/usr/bin/env smackup
use v6;

sub app(%env) {
    # Build a request object to parse the parameters for us
    my $qs     = %env<QUERY_STRING>;
    my %params = $qs.split('&')Â».split('=').flat;

    # FORBIDDEN unless the goto is one we expect
    return 403, [ 'Content-type' => 'text/plain' ], [ 'Absolutely not.' ]
        unless $goto ~~ any(|< http://foo http://bar http://baz >);

    # Get the goto parameter
    my $goto   = %params<goto>;

    # BAD BAD BAD Redirect to wherever that says to go
    302, [ Location => $goto ], []
};

